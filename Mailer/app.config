<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <connectionStrings>
    <add name="ConnString1" connectionString="server=192.168.2.222;uid=sa;pwd=huijing$%^789;database=Mailer;" providerName="SqlServer"/>
    <add name="ConnString" connectionString="Data Source=|DataDirectory|../db/mailer.db,version=3" providerName="MonoSQLite"/>
  </connectionStrings>
  <appSettings>
    <!--记录日志开关 “Pub.Class.NullLog, Pub.Class” 不记录日志 “Pub.Class.Log4Net.Log, Pub.Class.Log4Net” 使用log4net记录日志 “Pub.Class.TraceLog, Pub.Class” 在VS输出窗口输出消息-->
    <add key="LogProviderName" value="Pub.Class.NullLog, Pub.Class"/>
  </appSettings>
  <log4net>
    <logger name="loginfo">
      <level value="ALL"/>
      <appender-ref ref="InfoAppender"/>
    </logger>
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="log\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%m%n"/>
      </layout>
    </appender>
  </log4net>
  <startup>
    <supportedRuntime version="v2.0.50727"/>
  </startup>
</configuration>
